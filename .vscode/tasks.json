// See https://go.microsoft.com/fwlink/?LinkId=733558 for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        //Configure
        {
            "label": "Configure",
            "type": "shell",
            "command": "${workspaceRoot}/nuttx/tools/configure.sh",
            "args": [
                "-l",
                "stm32f3discovery:usbnsh"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": {
                "id": "broadcast",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        //Build-nuttx.elf
        {
            "label": "Build-nuttx.elf",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "icon": {
                "id": "tools",
                "color": "terminal.ansiBlue"
            },
            "dependsOn": [
                "SaveAllFiles",
                "Build-ccache",
                "ObjcopyNuttxElf"
            ],
            "dependsOrder": "sequence"
        },
        //Build-ccache
        {
            "label": "Build-ccache",
            "type": "shell",
            "command": "make",
            "args": [
                "CPP=/opt/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-cpp",
                "CC=/opt/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-gcc",
                "CXX=/opt/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-g++",
                "LD=/opt/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-ld",
                "-j4",
                "-C${workspaceRoot}/nuttx"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": {
                "id": "tools",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
        },
        //Flash stm32
        {
            "label": "Flash stm32",
            "group": "build",
            "type": "shell",
            "command": "st-flash --connect-under-reset write ${workspaceFolder}/nuttx/nuttx.bin 0x8000000",
            "args": [],
            "icon": {
                "id": "flame",
                "color": "terminal.ansiGreen"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Build all"
            ]
        },
        //Clean
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean -C ${workspaceRoot}/nuttx ",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": {
                "id": "dashboard",
                "color": "terminal.ansiBlue"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        //Distclean
        {
            "label": "Distclean",
            "type": "shell",
            "command": "make distclean -C ${workspaceRoot}/nuttx ",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "icon": {
                "id": "dashboard",
                "color": "terminal.ansiMagenta"
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        //SaveAllFiles
        {
            "label": "SaveAllFiles",
            "command": "${command:workbench.action.files.saveAll}",
            "type": "shell",
            "icon": {
                "id": "save-all",
                "color": "terminal.ansiGreen"
            },
            "problemMatcher": []
        },
        //Objcopy nuttx.elf
        {
            "label": "ObjcopyNuttxElf",
            "type": "shell",
            "command": "cd nuttx && /opt/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/bin/arm-none-eabi-objcopy nuttx nuttx.elf",
            "problemMatcher": []
        },
        //ccpbuild
        {
            "type": "cppbuild",
            "label": "C/C++: arm-none-eabi-gcc build active file",
            "command": "~/toolchains/arm-gnu-toolchain-14.2.rel1-x86_64-arm-none-eabi/arm-none-eabi-gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}